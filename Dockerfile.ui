# Étape de build
FROM oven/bun:latest AS build

# Définir le répertoire de travail
WORKDIR /app

# Copier les fichiers de l'application
COPY front/package.json front/bun.lockb ./

# Installer les dépendances
RUN bun install

# Copier le reste des fichiers de l'application
COPY front .
COPY front/.env.production .env

# Construire l'application
RUN bun run build

# Étape de production
FROM nginx:1.21.5-alpine AS production

# Install gettext for envsubst
RUN apk add --no-cache gettext

# Copier les fichiers de build depuis l'étape de build
COPY --from=build /app/dist /usr/share/nginx/html

# Copy and setup entrypoint script
COPY front/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Exposer le port 80
EXPOSE 80

# Use entrypoint script to substitute env vars at runtime
ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]

